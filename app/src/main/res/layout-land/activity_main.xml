<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity"
    android:background="#ecf0f1">

    <EditText
        android:id="@+id/expr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="36dp"
        android:textColor="#2c3e50"
        android:scrollHorizontally="true"
        android:inputType="text"/>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stretchColumns="*">

        <TableRow>

            <TextView
                android:id="@+id/n1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="50sp"
                android:gravity="center"
                android:layout_margin="2dp"
                android:text="1" />

            <TextView
                android:id="@+id/n2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="50sp"
                android:gravity="center"
                android:layout_margin="2dp"
                android:text="2" />

            <TextView
                android:id="@+id/n3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="50sp"
                android:gravity="center"
                android:layout_margin="2dp"
                android:text="3" />

            <TextView
                android:id="@+id/pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="50sp"
                android:gravity="center"
                android:layout_margin="2dp"
                android:background="#2c3e50"
                android:textColor="#ecf0f1"
                android:text="." />
            <TextView
                android:id="@+id/add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="50sp"
                android:gravity="center"
                android:layout_margin="2dp"
                android:background="#2c3e50"
                android:textColor="#ecf0f1"
                android:text="+" />
            <TextView
                android:id="@+id/sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="50sp"
                android:gravity="center"
                android:layout_margin="2dp"
                android:background="#2c3e50"
                android:textColor="#ecf0f1"
                android:text="-" />

            <TextView
                android:id="@+id/clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="50sp"
                android:gravity="center"
                android:layout_margin="2dp"
                android:background="#2c3e50"
                android:textColor="#ecf0f1"
                android:text="clr" />

            <TextView
                android:id="@+id/del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="50sp"
                android:gravity="center"
                android:layout_margin="2dp"
                android:background="#2c3e50"
                android:textColor="#ecf0f1"
                android:text="del" />

        </TableRow>
        <TableRow>

            <TextView
                android:id="@+id/n4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="50sp"
                android:gravity="center"
                android:layout_margin="2dp"
                android:text="4" />

            <TextView
                android:id="@+id/n5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="50sp"
                android:gravity="center"
                android:layout_margin="2dp"
                android:text="5" />

            <TextView
                android:id="@+id/n6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="50sp"
                android:gravity="center"
                android:layout_margin="2dp"
                android:text="6" />

            <TextView
                android:id="@+id/n0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="50sp"
                android:gravity="center"
                android:layout_margin="2dp"
                android:text="0" />

            <TextView
                android:id="@+id/mul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="50sp"
                android:gravity="center"
                android:layout_margin="2dp"
                android:background="#2c3e50"
                android:textColor="#ecf0f1"
                android:text="*" />
            <TextView
                android:id="@+id/div"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="50sp"
                android:gravity="center"
                android:layout_margin="2dp"
                android:background="#2c3e50"
                android:textColor="#ecf0f1"
                android:text="/" />
            <TextView
                android:id="@+id/sin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="50sp"
                android:gravity="center"
                android:layout_margin="2dp"
                android:background="#2c3e50"
                android:textColor="#ecf0f1"
                android:text="sin" />

            <TextView
                android:id="@+id/cos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="50sp"
                android:gravity="center"
                android:layout_margin="2dp"
                android:background="#2c3e50"
                android:textColor="#ecf0f1"
                android:text="cos" />

        </TableRow>
        <TableRow>

            <TextView
                android:id="@+id/n7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="50sp"
                android:gravity="center"
                android:layout_margin="2dp"
                android:text="7" />

            <TextView
                android:id="@+id/n8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="50sp"
                android:gravity="center"
                android:layout_margin="2dp"
                android:text="8" />

            <TextView
                android:id="@+id/n9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="50sp"
                android:gravity="center"
                android:layout_margin="2dp"
                android:text="9" />

            <TextView
                android:id="@+id/eq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="50sp"
                android:gravity="center"
                android:layout_margin="2dp"
                android:background="#2c3e50"
                android:textColor="#ecf0f1"
                android:text="=" />
            <TextView
                android:id="@+id/obr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="50sp"
                android:gravity="center"
                android:layout_margin="2dp"
                android:background="#2c3e50"
                android:textColor="#ecf0f1"
                android:text="(" />
            <TextView
                android:id="@+id/cbr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="50sp"
                android:gravity="center"
                android:layout_margin="2dp"
                android:background="#2c3e50"
                android:textColor="#ecf0f1"
                android:text=")" />

            <TextView
                android:id="@+id/log"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="50sp"
                android:gravity="center"
                android:layout_margin="2dp"
                android:background="#2c3e50"
                android:textColor="#ecf0f1"
                android:text="log" />

            <TextView
                android:id="@+id/pow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="50sp"
                android:gravity="center"
                android:layout_margin="2dp"
                android:background="#2c3e50"
                android:textColor="#ecf0f1"
                android:text="pow" />

        </TableRow>
    </TableLayout>
</LinearLayout>